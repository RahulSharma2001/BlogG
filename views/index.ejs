<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogG</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700&display=swap" rel="stylesheet">

</head>
<body>
    <div class="header">
        <div class="brand-name">
            <h1>BlogG</h1> 
        </div>
        <div class="rbtn">
        <div class="llo-btn">
          <a href="signin.html">  <button class="signin-btn" >
                Sign In
            </button></a>
        <a href="signup.html" > <button class="signup-btn">
                Sign Up
            </button></a>
        </div>
        </div>
        
    </div>

    <div class="main">  
    <button class="compose-btn"><a href="/compose"> 
            compose 
        </a></button>
    <% found.forEach(function(e){ %>
    
        <h1>
            <%=e.title%>
        </h1>
        <div class="imgview">
        <img src="data:image/jpeg;base64,<%=e.file.data%>" class="productimg" alt="">
        </div>
        <p>
            <%= e.content %>
               
        </p>
    
    
        <% }) %>
    
    </div>
    <div class="footer">
    <p>&copy; Rahul Sharma</p>
    </div>
</body>
</html>